<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceX" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- CARDVIEW -->
    <style name="ShapeAppearance.CardView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7dp</item>
    </style>

    <style name="MyCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.CardView</item>
    </style>

    <style name="CardText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darker</item>
    </style>

    <!-- DETAIL CARDVIEW -->
    <style name="ShapeAppearance.DetailCardView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7dp</item>
    </style>

    <style name="DetailCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.DetailCardView</item>
    </style>

    <style name="DetailCardText" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/darker</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ICON -->
    <style name="IconTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/darker</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Chip -->
    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">5dp</item>

    </style>

    <style name="DetailActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/tab_background_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="iconTint">@color/tab_text_color</item>
    </style>

    <style name="ShipTextCard" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/darker</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="OverviewText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">10sp</item>
    </style>




</resources>