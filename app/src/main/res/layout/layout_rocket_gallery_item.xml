<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="rocket"
            type="com.x5bartsoft.spacex.model.ImageViewPager" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/l_rocket_gallery_item_main_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    loadMainImageForViewPager="@{rocket.url}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/rocket_photo" />

                <View
                    android:id="@+id/l_rocket_gallery_item_main_gradient"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:background="@drawable/gradient_main_owerview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/l_rocket_name_imageView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.7"
                    app:tint="@color/white"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_rocket"
                    android:contentDescription="@string/rocket_image" />

                <TextView
                    android:id="@+id/l_rocket_gallery_item_name_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:alpha="0.7"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="start"
                    android:text="@{rocket.name}"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="@+id/l_rocket_name_imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/l_rocket_name_imageView"
                    app:layout_constraintTop_toTopOf="@+id/l_rocket_name_imageView"
                    tools:text="FalconSat" />


                <ImageView
                    android:id="@+id/l_rocket_gallery_item_diameter_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:alpha="0.7"
                    app:layout_constraintBottom_toTopOf="@+id/l_rocket_gallery_item_diameter_textView"
                    app:layout_constraintEnd_toStartOf="@+id/l_rocket_gallery_item_mass_imageView"
                    app:srcCompat="@drawable/ic_diameter"
                    app:tint="@color/white"
                    android:contentDescription="@string/diameter_image" />

                <TextView
                    android:id="@+id/l_rocket_gallery_item_diameter_textView"
                    style="@style/IconTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    getDiameterVP="@{rocket.diameter}"
                    android:alpha="0.7"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/l_rocket_gallery_item_diameter_imageView"
                    app:layout_constraintStart_toStartOf="@+id/l_rocket_gallery_item_diameter_imageView"
                    tools:text="1.68 m" />

                <TextView
                    android:id="@+id/l_rocket_gallery_item_mass_textView"
                    style="@style/IconTextStyle"
                    getMassVP="@{rocket.mass}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:alpha="0.7"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/l_rocket_gallery_item_mass_imageView"
                    app:layout_constraintStart_toStartOf="@+id/l_rocket_gallery_item_mass_imageView"
                    tools:text="30146" />

                <ImageView
                    android:id="@+id/l_rocket_gallery_item_mass_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.7"
                    app:layout_constraintBottom_toTopOf="@+id/l_rocket_gallery_item_mass_textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_weight"
                    app:tint="@color/white"
                    android:contentDescription="@string/mass_image" />

                <ImageView
                    android:id="@+id/l_rocket_gallery_item_height_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:alpha="0.7"
                    app:layout_constraintBottom_toTopOf="@+id/l_rocket_gallery_item_diameter_textView"
                    app:layout_constraintEnd_toStartOf="@+id/l_rocket_gallery_item_diameter_imageView"
                    app:srcCompat="@drawable/ic_height"
                    app:tint="@color/white"
                    android:contentDescription="@string/height_image" />

                <TextView
                    android:id="@+id/l_rocket_gallery_item_height_textView"
                    style="@style/IconTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    getHeightVP="@{rocket.height}"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/l_rocket_gallery_item_diameter_textView"
                    app:layout_constraintEnd_toEndOf="@+id/l_rocket_gallery_item_height_imageView"
                    app:layout_constraintStart_toStartOf="@+id/l_rocket_gallery_item_height_imageView"
                    tools:text="22.25 m" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>
