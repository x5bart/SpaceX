<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ship"
            type="com.x5bartsoft.spacex.model.response.launchdetail.Ship" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/l_ship_main_imageView"
                    loadOneImageFromUrl="@{ship.image}"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription="@string/image_ship"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/l_ship_name_title_textView"
                    style="@style/ShipTextCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/name"
                    app:layout_constraintStart_toStartOf="@+id/l_ship_main_imageView"
                    app:layout_constraintTop_toBottomOf="@+id/l_ship_main_imageView" />

                <TextView
                    android:id="@+id/l_ship_name_textView"
                    style="@style/ShipTextCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@{ship.name}"
                    app:layout_constraintEnd_toEndOf="@+id/l_ship_main_imageView"
                    app:layout_constraintStart_toEndOf="@+id/l_ship_name_title_textView"
                    app:layout_constraintTop_toTopOf="@+id/l_ship_name_title_textView"
                    tools:text="Hollywood" />

                <TextView
                    android:id="@+id/l_ship_type_title_textView"
                    style="@style/ShipTextCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/type"
                    app:layout_constraintStart_toStartOf="@+id/l_ship_name_title_textView"
                    app:layout_constraintTop_toBottomOf="@+id/l_ship_name_title_textView" />

                <TextView
                    android:id="@+id/l_ship_type_textView"
                    style="@style/ShipTextCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{ship.type}"
                    app:layout_constraintEnd_toEndOf="@+id/l_ship_name_textView"
                    app:layout_constraintStart_toEndOf="@+id/l_ship_type_title_textView"
                    app:layout_constraintTop_toTopOf="@+id/l_ship_type_title_textView"
                    tools:text="Tug" />

                <TextView
                    android:id="@+id/l_ship_role_title_textView"
                    style="@style/ShipTextCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/role"
                    app:layout_constraintStart_toStartOf="@+id/l_ship_type_title_textView"
                    app:layout_constraintTop_toBottomOf="@+id/l_ship_type_title_textView" />

                <TextView
                    android:id="@+id/l_ship_role_textView"
                    style="@style/ShipTextCard"
                    getRole="@{ship}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/l_ship_type_textView"
                    app:layout_constraintStart_toEndOf="@+id/l_ship_role_title_textView"
                    app:layout_constraintTop_toTopOf="@+id/l_ship_role_title_textView"
                    tools:text="Support Ship, Fairing Recovery" />

                <TextView
                    android:id="@+id/l_ship_year_title_textView"
                    style="@style/ShipTextCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/build_year"
                    app:layout_constraintStart_toStartOf="@+id/l_ship_role_title_textView"
                    app:layout_constraintTop_toBottomOf="@+id/l_ship_role_title_textView" />

                <TextView
                    android:id="@+id/l_ship_year_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{String.valueOf(ship.yearBuilt)}"
                    style="@style/ShipTextCard"
                    app:layout_constraintStart_toEndOf="@+id/l_ship_year_title_textView"
                    app:layout_constraintTop_toTopOf="@+id/l_ship_year_title_textView"
                    tools:text="1985" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/marinetraffic_logo"
                    app:layout_constraintBottom_toBottomOf="@+id/l_ship_marine_textView"
                    app:layout_constraintEnd_toStartOf="@+id/l_ship_marine_textView"
                    app:layout_constraintTop_toTopOf="@+id/l_ship_marine_textView"
                    app:srcCompat="@drawable/ic_marrine" />

                <TextView
                    android:id="@+id/l_ship_marine_textView"
                    style="@style/ShipTextCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/marinetraffic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/l_ship_year_textView" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>